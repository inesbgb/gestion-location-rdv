{% extends 'base.html.twig' %}

{% block title %}Annuler un rendez-vous{% endblock %}

{% block body %}
<div class="container mx-auto mt-8">
    <h1 class="text-3xl font-bold mb-6 text-center">Annuler un rendez-vous</h1>
    
    {{ form_start(form, {'attr': {'class': 'max-w-md mx-auto'}}) }}
        {{ form_row(form.numRdv, {
            'attr': {'class': 'w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
        }) }}
        
        <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg mt-4">
            Annuler le rendez-vous
        </button>
    {{ form_end(form) }}
</div>
{% endblock %}