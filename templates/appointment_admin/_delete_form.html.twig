{% if rendez_vou is defined and rendez_vou.id is not empty %}
    <form method="post" action="{{ path('app_appointment_admin_delete', {'id': rendez_vou.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce rendez-vous ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rendez_vou.id) }}">
        <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Supprimer</button>
    </form>
{% else %}
    <p>Aucun rendez-vous à supprimer.</p>
{% endif %}