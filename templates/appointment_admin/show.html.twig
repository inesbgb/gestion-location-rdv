{% extends 'base.html.twig' %}

{% block title %}Rendez-Vous{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen">
        <div class="bg-white shadow-md rounded-lg p-6 w-full max-w-lg">
            <h1 class="text-2xl font-bold mb-4 text-center">Rendez-Vous</h1>

            <table class="min-w-full bg-white border border-gray-200">
                <tbody>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Id</th>
                        <td class="px-4 py-2">{{ rendez_vou.id }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Date rdv</th>
                        <td class="px-4 py-2">{{ rendez_vou.dateRdv ? rendez_vou.dateRdv|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Heure rdv</th>
                        <td class="px-4 py-2">{{ rendez_vou.heureRdv ? rendez_vou.heureRdv|date('H:i:s') : '' }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Statut</th>
                        <td class="px-4 py-2">{{ rendez_vou.statut ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Email</th>
                        <td class="px-4 py-2">{{ rendez_vou.email }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Num rdv</th>
                        <td class="px-4 py-2">{{ rendez_vou.numRdv }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Prenom</th>
                        <td class="px-4 py-2">{{ rendez_vou.prenom }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Nom</th>
                        <td class="px-4 py-2">{{ rendez_vou.nom }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Tel</th>
                        <td class="px-4 py-2">{{ rendez_vou.tel }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Date evenement</th>
                        <td class="px-4 py-2">{{ rendez_vou.dateEvenemnt ? rendez_vou.dateEvenemnt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr class="border-t">
                        <th class="px-4 py-2 text-left text-gray-600">Type evenement</th>
                        <td class="px-4 py-2">{{ rendez_vou.typeEvenement }}</td>
                    </tr>
                </tbody>
            </table>

           <div class="mt-6 space-y-4">
                <div class="flex justify-between items-center">
                    <a href="{{ path('app_appointment_admin_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm font-medium rounded-md transition duration-300 ease-in-out">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                        Retour Ã  la liste
                    </a>
                    <a href="{{ path('app_appointment_admin_edit', {'id': rendez_vou.id}) }}" class="inline-flex items-center px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium rounded-md transition duration-300 ease-in-out">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                        Modifier
                    </a>
                </div>
                
                <div class="flex justify-center">
                    {{ include('appointment_admin/_delete_form.html.twig', {'button_class': 'inline-flex items-center px-4 py-2 bg-red-500 hover:bg-red-600 text-white text-sm font-medium rounded-md transition duration-300 ease-in-out'}) }}
                </div>
        </div>
    </div>
{% endblock %}