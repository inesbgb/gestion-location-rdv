{% extends 'base.html.twig' %}

{% block title %}Liste des Rendez-vous{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Liste des Rendez-vous</h1>
   
    <table class="min-w-full bg-white border border-gray-200">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">Id</th>
                <th class="py-2 px-4 border-b">Date du RDV</th>
                <th class="py-2 px-4 border-b">Heure du RDV</th>
                <th class="py-2 px-4 border-b">Statut</th>
                <th class="py-2 px-4 border-b">Email</th>
                <th class="py-2 px-4 border-b">Numéro du RDV</th>
                <th class="py-2 px-4 border-b">Prénom</th>
                <th class="py-2 px-4 border-b">Nom</th>
                <th class="py-2 px-4 border-b">Téléphone</th>
                <th class="py-2 px-4 border-b">Date de l'événement</th>
                <th class="py-2 px-4 border-b">Type d'événement</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vou %}
            <tr class="hover:bg-gray-100">
                <td class="py-2 px-4 border-b">{{ rendez_vou.id }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.dateRdv ? rendez_vou.dateRdv|date('Y-m-d H:i:s') : '' }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.heureRdv ? rendez_vou.heureRdv|date('H:i:s') : '' }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.statut ? 'Oui' : 'Non' }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.email }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.numRdv }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.prenom }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.nom }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.tel }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.dateEvenemnt ? rendez_vou.dateEvenemnt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="py-2 px-4 border-b">{{ rendez_vou.typeEvenement }}</td>
                <td class="py-2 px-4 border-b">
                    <a href="{{ path('app_appointment_admin_show', {'id': rendez_vou.id}) }}" class="text-blue-500 hover:underline">Voir</a>
                    <a href="{{ path('app_appointment_admin_edit', {'id': rendez_vou.id}) }}" class="text-yellow-500 hover:underline ml-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12" class="py-2 px-4 border-b text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_appointment_admin_new') }}" class="mt-4 inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Créer un nouveau</a>


{% endblock %}