{# templates/element_admin/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    {% for field in form %}
        <div class="space-y-2">
            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(field, {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
            {{ form_errors(field, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
        </div>
    {% endfor %}
    <div class="pt-5">
        <button type="submit" class="w-full sm:w-auto px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}