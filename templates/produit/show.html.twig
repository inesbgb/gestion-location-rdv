{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container mx-auto px-4 pt-24 sm:pt-24">
    <h1 class="text-4xl font-bold mb-8 text-center">{{ produit.designation }}</h1>

    <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="flex flex-col md:flex-row">
            <div class="md:w-1/2">
                {% if produit.imageUrl %}
                    <img src="{{ produit.imageUrl }}" alt="{{ produit.designation }}" class="w-full h-auto object-cover">
                {% else %}
                    <div class="w-full h-64 flex items-center justify-center bg-gray-200">
                        No image
                    </div>
                {% endif %}
            </div>
            <div class="md:w-1/2 p-6">
                <h2 class="text-2xl font-bold mb-4">{{ produit.designation }}</h2>
                <p class="text-gray-700 mb-4">{{ produit.description }}</p>
                <p class="text-gray-900 font-semibold mb-2">Prix: {{ produit.prix }} €</p>
                <p class="text-gray-900 font-semibold mb-2">Tailles disponibles:</p>
                <ul class="list-disc list-inside mb-4">
                    {% for produitTaille in produitsMemeTaille %}
                        <li>{{ produitTaille.taille.libel }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="mt-8 text-center">
        <a href="{{ path('app_produit_location') }}" class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300">Retour à la liste</a>
    </div>
</div>
{% endblock %}