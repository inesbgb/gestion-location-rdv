<div class="overflow-hidden">
    {{ form_start(form, {'attr': {'class': 'p-6 space-y-6'}}) }}
        <div class="space-y-4">
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div>
                        {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                        {{ form_errors(field, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="mt-6 flex items-center justify-end">
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300 ease-in-out">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    {{ form_end(form) }}
</div>