{% extends 'base.html.twig' %}

{% block title %}Calendrier Admin{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Calendrier Admin</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message }}</span>
        </div>
    {% endfor %}

    <form method="post" action="{{ path('app_calendrier') }}">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for jour in joursSemaine %}
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <label class="flex items-center space-x-3">
                        <span class="text-lg">{{ jour.libelle }}</span>
                        <input type="checkbox" name="jours_semaine[{{ jour.libelle }}]" class="form-checkbox h-5 w-5 text-blue-600" {% if jour.ouvert %}checked{% endif %}>
                    </label>
                </div>
            {% endfor %}
        </div>
        <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" onclick="return confirm('Êtes-vous sûr de vouloir modifier ?')">Mettre à jour</button>
    </form>
</div>
{% endblock %}