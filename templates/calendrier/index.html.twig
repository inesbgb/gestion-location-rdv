{% extends 'base.html.twig' %}

{% block title %}Gestion des disponibilités{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl md:text-3xl font-bold mb-6">Gestion des disponibilités</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <form method="POST" action="{{ path('app_calendrier') }}" class="mb-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-6">
            {% for jour in joursSemaine %}
                <div class="flex items-center bg-white p-3 rounded-lg shadow">
                    <input type="checkbox" id="jour_{{ jour.libelle }}" name="jours_semaine[{{ jour.libelle }}]"
                     {% if jour.ouvert %}checked{% endif %} class="mr-3 h-5 w-5 text-blue-600">
                    <label for="jour_{{ jour.libelle }}" class="text-sm md:text-base">{{ jour.libelle|capitalize }}</label>
                </div>
            {% endfor %}
        </div>
        <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0 sm:space-x-4">
            <button type="submit" class="w-full sm:w-auto bg-blue-500 hover:bg-blue-700 text-white font-bold 
            py-2 px-6 rounded transition duration-300 ease-in-out">
                Enregistrer les modifications
            </button>
            <a href="{{ path('app_appointment_admin_index') }}" class="w-full sm:w-auto bg-gray-500 hover:bg-gray-700
             text-white font-bold py-2 px-6 rounded transition duration-300 ease-in-out text-center">
                Retour à la liste des rendez-vous
            </a>
        </div>
    </form>
</div>
{% endblock %}